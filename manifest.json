{
	"manifest_version": 2,
	"name": "Twitch Notifier",
	"version": "1.4.5",
	"description": "Notifies you when streams go online.",
	"background": { 
		"scripts": ["js/jquery-2.0.3.min.js", "js/jquery.storage.js", "js/background.js"],
		"persistent": true
	},
	"icons": {
		"48": "images/logo.png",
		"128": "images/logo.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png"
		},
		"default_title": "twitchtv notifier",
		"default_popup": "popup.html"
	},
	"permissions": [
		"*://qtv.atrophied.co.uk/*",
		"tabs",
		"notifications"
	]
}
